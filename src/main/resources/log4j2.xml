<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="XMLConfig" packages="com.isvaso">

    <Properties>
        <Property name="filename">logs/log.log</Property>
    </Properties>
    <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>

    <Appenders>

        <RollingFile name="RollingFile" fileName="logs/log.log"
                     filePattern = "logs/%d{yyy-MM-dd}.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5p] [%c{1}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="1MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>

        <Appender type="Console" name="Console">
            <Layout type="PatternLayout"
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5p] [%c{1}] - %m%n"/>
        </Appender>

    </Appenders>

    <Loggers>
        <Logger name="com.isvaso" level="all" additivity="false">
            <AppenderRef ref="RollingFile"/>
            <!--<AppenderRef ref="Console"/>-->
        </Logger>


        <Root level="trace">
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>

</Configuration>